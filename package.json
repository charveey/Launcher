{
  "name": "newhopelauncher",
  "version": "1.0.0",
  "productName": "NewHope",
  "description": "NewHope saját launchere",
  "author": "Daniel Scalzi (https://github.com/dscalzi/), Gál Péter (https://github.com/pepyta/)",
  "license": "UNLICENSED",
  "homepage": "https://github.com/pepyta/NewHopeLauncher",
  "bugs": {
    "url": "https://github.com/pepyta/NewHopeLauncher/issues"
  },
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "electron index.js",
    "cilinux": "electron-builder --linux --win",
    "cidarwin": "electron-builder --mac",
    "dist": "cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder",
    "dist:win": "npm run dist -- --win --x64",
    "dist:mac": "npm run dist -- --mac",
    "dist:linux": "npm run dist -- --linux --x64",
    "lint": "eslint --config .eslintrc.json ."
  },
  "engines": {
    "node": "10.x.x"
  },
  "dependencies": {
    "adm-zip": "^0.4.13",
    "async": "^2.6.1",
    "discord-rpc": "github:discordjs/RPC",
    "ejs": "^2.6.1",
    "ejs-electron": "^2.0.3",
    "electron-updater": "^4.0.5",
    "fs-extra": "^7.0.1",
    "github-syntax-dark": "^0.5.0",
    "jquery": "^3.3.1",
    "request": "^2.88.0",
    "semver": "^5.6.0",
    "tar-fs": "^1.16.3",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2",
    "eslint": "^5.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pepyta/NewHopeLauncher.git"
  },
  "build": {
    "appId": "newhopelauncher",
    "productName": "NewHope",
    "artifactName": "${productName}.${ext}",
    "copyright": "Copyright © 2018 Daniel Scalzi, Gál Péter",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "maintainer": "Gál Péter",
      "vendor": "newhopelauncher",
      "synopsis": "Saját indító a NewHopehoz",
      "description": "NewHope saját launchere",
      "category": "Game"
    },
    "deb": {
      "compression": "xz",
      "packageCategory": "Games",
      "priority": "optional"
    },
    "compression": "maximum",
    "files": [
      "!{dist,.gitignore,.vscode,docs,dev-app-update.yml,.travis.yml,.nvmrc,.eslintrc.json}"
    ],
    "extraResources": [
      "libraries"
    ],
    "asar": true
  }
}
