<div id="loginContainer" style="display: none;">
    <div id="loginCancelContainer" style="display: none;">
        <button id="loginCancelButton">
            <div id="loginCancelIcon">X</div>
            <span id="loginCancelText">Bezátás</span>
        </button>
    </div>
    <div id="loginContent">
        <form id="loginForm">
            <img id="loginImageSeal" src="assets/images/NewHopeWideLogo.png"/>
            <span id="loginSubheader">BEJELENTKEZÉS</span>
            <div class="loginFieldContainer">
                <span class="loginErrorSpan" id="loginEmailError">* Helytelen érték</span>
                <input id="loginUsername" class="loginField" type="text" placeholder="Felhasználónév"/>
            </div>
            <button id="loginButton" disabled>
                <div id="loginButtonContent">
                    BEJELENTKEZÉS
                    <svg id="loginSVG" viewBox="0 0 24.87 13.97">
                        <defs>
                            <style>.arrowLine{fill:none;stroke:#FFF;stroke-width:2px;transition: 0.25s ease;}</style>
                        </defs>
                        <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02"/>
                    </svg>
                    <div class="circle-loader">
                        <div class="checkmark draw"></div>
                    </div>
                    <!--<div class="spinningCircle" id="loginSpinner"></div>-->
                </div>
            </button>
            <div id="loginDisclaimer">
                <p class="loginDisclaimerText">NewHope is not affiliated with Mojang AB.</p>
            </div>
        </form>
    </div>
    <script src="./assets/js/scripts/login.js"></script>
</div>